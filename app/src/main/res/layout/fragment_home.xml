<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="Fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/special"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp"
                android:text="Discover Your Dream Jobs"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/special"
                android:scrollbars="none">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/first_card"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cardCornerRadius="50dp"
                        android:elevation="10dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginLeft="12dp">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="75dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/img"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/first_card2"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cardCornerRadius="50dp"
                        android:elevation="10dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginLeft="12dp">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="75dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/img_1"

                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/first_card3"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cardCornerRadius="50dp"
                        android:elevation="10dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginLeft="12dp">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="75dp">


                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginEnd="0dp"
                                android:layout_marginBottom="0dp"
                                android:src="@drawable/img_2" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/first_card4"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cardCornerRadius="50dp"
                        android:elevation="10dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginLeft="12dp">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="75dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/img_3"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/first_card5"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cardCornerRadius="50dp"
                        android:elevation="10dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginLeft="12dp">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="75dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/img_4"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/first_card6"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cardCornerRadius="50dp"
                        android:elevation="10dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginLeft="12dp">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="75dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/img_5"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/first_card7"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cardCornerRadius="50dp"
                        android:elevation="10dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginLeft="12dp">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="75dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/img_6"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/first_card8"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cardCornerRadius="50dp"
                        android:elevation="10dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginLeft="12dp">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="75dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/img_7"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/first_card9"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cardCornerRadius="50dp"
                        android:elevation="10dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginLeft="12dp">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="75dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/img_8"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/first_card10"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cardCornerRadius="50dp"
                        android:elevation="10dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginLeft="12dp">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="75dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/img_9"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Add more cards as needed -->

                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:id="@+id/upcoming"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="145dp"
                />


            <ViewFlipper
                android:id="@+id/viewFlipper"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:autoStart="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/upcoming"
                android:inAnimation="@android:anim/slide_in_left"
                android:outAnimation="@android:anim/slide_out_right">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:src="@drawable/img_10"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:src="@drawable/img_11"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:src="@drawable/img_12"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:src="@drawable/img_13"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:src="@drawable/img_14"/>


            </ViewFlipper>




            <LinearLayout
                android:id="@+id/colm"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_below="@+id/viewFlipper"
                android:orientation="horizontal"
                >


                <androidx.cardview.widget.CardView
                    android:id="@+id/imageCard"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="5dp"
                    android:layout_margin="12dp"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="70dp"
                            android:src="@drawable/img_20"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apptitude"
                            android:textAlignment="center"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/videoCard"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_margin="12dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="70dp"
                            android:src="@drawable/img_19"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="College"
                            android:textAlignment="center"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/audioCard"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_margin="12dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="70dp"
                            android:src="@drawable/img_21"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quick Links"
                            android:textAlignment="center"
                            android:textStyle="bold"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <ViewFlipper
                android:id="@+id/flipper"
                android:layout_below="@+id/colm"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:flipInterval="3000"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:autoStart="true"
                android:inAnimation="@android:anim/slide_in_left"
                android:outAnimation="@android:anim/slide_out_right">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_15"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_16"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_17"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_18"/>


            </ViewFlipper>

            <LinearLayout
                android:id="@+id/bottom_card2"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/flipper">

                <androidx.cardview.widget.CardView
                    android:id="@+id/down"
                    android:layout_width="match_parent"
                    android:layout_height="122dp"
                    app:cardCornerRadius="5dp"
                    android:elevation="12dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    >

                    <LinearLayout
                        android:id="@+id/down_image"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginVertical="10dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_23"/>

                    <!-- Add a TextView on the right side of the ImageView -->
                    <TextView
                        android:id="@+id/textViewRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prof (Dr) Neelam Sharma"
                        android:textStyle="bold"
                        android:layout_marginLeft="40dp"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>



            <LinearLayout

                android:id="@+id/last"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:layout_below="@+id/bottom_card2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/down2"
                    android:layout_width="match_parent"
                    android:layout_height="122dp"
                    app:cardCornerRadius="5dp"
                    android:elevation="12dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp">

                    <LinearLayout
                        android:id="@+id/down_image2"
                        android:layout_width="match_parent"
                        android:layout_height="165dp"
                        android:layout_marginVertical="10dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_22"/>

                    <!-- Add a TextView on the right side of the ImageView -->
                    <TextView
                        android:id="@+id/textviewRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr. N K Garg"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/abot"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/last"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D4F6F3"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Career Quick"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="25dp"
                        android:textColor="#07675E"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Passionate about revolutionizing the education system to empower students with equitable access to quality learning opportunities."
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="100dp"
                        android:layout_marginLeft="12dp"/>
                </LinearLayout>
            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>

</FrameLayout>